# Environment Configuration
# Copy this file to .env.local in the root directory
# All apps (web, api, raw, docs) will read from this single file

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Port Configuration
PORT_API=3001
PORT_WEB=3000
PORT_RAW=3002
PORT_DOCS=3003

# API Configuration
API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# Security
ENCRYPTION_KEY=your-32-byte-encryption-key-here
JWT_SECRET=your-jwt-secret-here

# Rate Limiting (optional - uses in-memory by default)
REDIS_URL=redis://localhost:6379

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_RAW_URL=http://localhost:3002
NEXT_PUBLIC_DOCS_URL=http://localhost:3003
