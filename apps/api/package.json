        "@nestjs/throttler": "^6.2.1",
        "@psti/config": "*",
        "@psti/database": "*",
        "@psti/security": "*",
        "@psti/types": "*",
        "@psti/validation": "*",
        "@supabase/supabase-js": "^2.47.10",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "helmet": "^8.0.0",
        "reflect-metadata": "^0.2.2",
